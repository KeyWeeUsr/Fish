<Body>:
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            source: 'ocean.jpg'
            size: self.size
            pos: self.pos
    Screen:
        name: 'menu'
        BoxVert:
            size_hint: 0.8,0.8
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Buttlab:
                text: 'Play'
                on_release: root.current = 'game'; root.running = 1
            Buttlab:
                text: 'Instructions'
                on_release: root.current = 'instructions'
            Buttlab:
                text: 'About'
                on_release: root.current = 'about'
            Buttlab:
                text: 'Exit game'
                on_release: exit()
    GameScreen:
        id: game
        name: 'game'
    Screen:
        name: 'highscore'
        BoxVert:
            Label:
                font_size: 55
                text: 'Score:'
                font_name: 'kenpixel_blocks.ttf'
            Label:
                id: highscore
                font_size: 50
                font_name: 'kenpixel_blocks.ttf'
            BoxLayout:
                Buttlab:
                    size_hint: [0.2, 0.2]
                    text: 'Again!'
                    on_release: root.restart()
    Screen:
        name: 'endgame'
        BoxVert:
            Label:
                text: 'Congratulation!'
                font_size: 30
                size_hint_y: None
                height: self.texture_size[1]*3
                font_name: 'kenpixel_blocks.ttf'
            Label:
                font_size: 15
                halign: 'center'
                text: "You've become so big your body collapsed and those little fish ate you."
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                font_name: 'kenpixel_blocks.ttf'
            Widget:
            Buttlab:
                size_hint_y: None
                height: self.parent.size[1]*0.06
                text: 'Continue!'
                on_release: root.current = 'highscore'
    Screen:
        name: 'instructions'
        BoxVert:
            Label:
                text: 'Instructions'
                font_size: 30
                size_hint_y: None
                height: self.texture_size[1]*3
                font_name: 'kenpixel_blocks.ttf'
            ScrollView:
                Label:
                    font_size: 15
                    halign: 'center'
                    text: "If you play the game on a PC, you can use arrows or WASD to control your fish and Pause&Escape keys on your keyboard to pause or quit the game.\n\nMobile version comes with special control bar on the bottom of the screen."
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    font_name: 'kenpixel_blocks.ttf'
            Widget:
            Buttlab:
                size_hint_y: None
                height: self.parent.size[1]*0.06
                text: 'Back!'
                on_release: root.current = 'menu'
    Screen:
        name: 'about'
        BoxVert:
            Label:
                text: 'About'
                font_size: 30
                size_hint_y: None
                height: self.texture_size[1]*3
                font_name: 'kenpixel_blocks.ttf'
            ScrollView:
                Label:
                    font_size: 15
                    halign: 'center'
                    text: "Hi, I'm Peter. As a kid I played a similar game with all those colorful fish and pretty animations. Therefore I've made my own version to bring it back and share some code. I'd like to thank\nKenney\n(http://kenney.nl)\n\nand\n\nOpenClipartVectors\n(https://pixabay.com/en/users/OpenClipartVectors-30363)\nfor CC0 assets.\n\n If you experience any bugs or weird things, please let me know or feel free to contribute. You can find me and the code on https://github.com/KeyWeeUsr"
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    font_name: 'kenpixel_blocks.ttf'
            Widget:
            Buttlab:
                size_hint_y: None
                height: self.parent.size[1]*0.06
                text: 'Back!'
                on_release: root.current = 'menu'
<GameScreen>:
    BoxVert:
        FloatLayout:
            id: water
            PlayerFish:
                id: player
            BoxVert:
                size_hint: 0.3,0.2
                pos_hint:{'top':1}
                BoxLayout:
                    id: fbig
                    pos_hint: {'top':1}
                    size_hint: 1,0.1
                BoxLayout:
                    id: fmed
                    pos_hint: {'top':0.9}
                    size_hint: 0.9,0.1
                BoxLayout:
                    id: flit
                    pos_hint: {'top':0.8}
                    size_hint:0.8, 0.1
            Label:
                id: score
                text: '0'
                pos_hint: {'top':1.45, 'right':1.1}
                font_name: 'kenpixel_blocks.ttf'
        BoxLayout:
            id: controls
            size_hint: [1, 0.3]
            BoxVert:
                Buttim:
                    source: 'sound.png'
                Buttim:
                    source: 'quit.png'
                    on_release: exit()
            Widget:
            GridLayout:
                cols: 3
                size_hint_x: None
                width: self.height
                Widget:
                Buttim:
                    id: arru
                    source: 'arru.png'
                    text: 'up'
                    on_press: root.use(self.text, 1)
                    on_release: root.use(self.text, 0)
                Widget:
                Buttim:
                    id: arrl
                    source: 'arrl.png'
                    text: 'left'
                    on_press: root.use(self.text, 1)
                    on_release: root.use(self.text, 0)
                Widget:
                Buttim:
                    id: arrr
                    source: 'arrr.png'
                    text: 'right'
                    on_press: root.use(self.text, 1)
                    on_release: root.use(self.text, 0)
                Widget:
                Buttim:
                    id: arrd
                    source: 'arrd.png'
                    text: 'down'
                    on_press: root.use(self.text, 1)
                    on_release: root.use(self.text, 0)
                Widget:
            Widget:
            BoxVert:
                Buttim:
                    source: 'pause.png'
                    on_release: root.parent.pause_game()
                Buttim:
                    source: 'reset.png'
                    on_release: root.parent.ids.highscore.text = root.ids.score.text
                    on_release: root.parent.pause_game(1)
<PlayerFish>:
    size_hint: [None, None]
    size: map(lambda x: x*self.body_size, self.default_size)
    source: 'playerL.png'
<Buttim@ButtonBehavior+AsyncImage>
    on_press: self.color=(1,1,1,0.4)
    on_release: self.color=(1,1,1,1)
<Buttlab@ButtonBehavior+Label>
    font_name: 'kenpixel_blocks.ttf'
    font_size: 30
<BoxVert@BoxLayout>:
    orientation: 'vertical'